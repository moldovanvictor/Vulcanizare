<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vulcanizare.MAUI.TireHotelPage"
             Title="Tire Hotel">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="User ID" />
            <Entry x:Name="UserIdEntry" />

            <Label Text="Tire Status" />
            <Entry x:Name="TireStatusEntry" />

            <Button Text="Check Tire Status" Clicked="OnCheckTireStatusClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>