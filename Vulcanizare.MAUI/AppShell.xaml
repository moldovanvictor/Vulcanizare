<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Vulcanizare.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Vulcanizare.MAUI"
    xmlns:views="clr-namespace:Vulcanizare.MAUI.Views"
    Shell.TabBarIsVisible="False">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:LoginPage}"
        FlyoutItemIsVisible="False"
        Shell.FlyoutBehavior="Disabled"
        Route="LoginPage" />

    <FlyoutItem Route="HomePage" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Home" ContentTemplate="{DataTemplate views:HomePage}"/>
        <ShellContent Title="Contact" ContentTemplate="{DataTemplate views:ContactPage}"/>
        <ShellContent Title="About" ContentTemplate="{DataTemplate views:AboutPage}"/>
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <StackLayout Padding="20">
            <Button Text="Sign Out" Command="{Binding SignOutCommand}" BackgroundColor="#5537dc"/>
        </StackLayout>
    </Shell.FlyoutFooter>
</Shell>